</head>
<body>

<!-- Error Container -->
<div class="container-fluid mt-3 position-fixed bg-ecogreen-green">
    <div class="d-flex justify-content-around align-items-center">
        <div class="d-flex flex-column align-items-center justify-content-end bg-transparent">
            <h2 class="display-5 font-weight-bold text-ecogreen mb-3"><%= error.status %> <span class="text-dark"><%= message %></span></h2>
            <h6 class="mb-0 text-dark font-weight-bold">Redirecting to Home in <span id="countdown">5</span> . . .</h6>
        </div>
    </div>
</div>

<!-- Extra scripts starts -->
<script>
    $(document).ready(function() {
        setTimeout(decreaseCountdown, 1000);
    });

    var decreaseCountdown = () => {
        if($('#countdown').html() == 1) return window.location.href = '/';
        $('#countdown').html($('#countdown').html() - 1);
        setTimeout(decreaseCountdown,1000);
    }
</script>
<!-- Extra scripts ends -->

